<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id: score_lbl
            text: "Рахунок"
        FloatLayout:
            Image:
                id: ball
                size_hint: 0.3, 0.3
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "220-2209473_-soccer-ball-world-cup.png"

            Button:
                size_hint: 0.5, 1
                background_color:1,0,0,0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.click()
                on_release: print("Зменшити")
        Button:
            size_hint: 0.5, 1
            background_color:1,0,0,1
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.go_to_first()
            on_release: print("назад")
            text: ("назад")


<FirstScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5, "top_y": 1}
            text: "почати гру"
            on_press: root.click()
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5, "top_y": 1}
            text: "настройки"
            on_press: root.buy
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5, "top_y": 1}
            text: "вихід"





<MenuScreen>:
    Button:

<ShopScreen>:
    FloatLayout:
        Image:
            source: 'img_1.png'
            allow_stretch: True
            keep_ratio: False
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.2
                Button:
                    text: "Назад"
                Label:
                    text: "Рахунок"
            ScrollView:
                size_hint_y: None
                size_hint: 1, 1
                GridLayout:
                    id: shopItems
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 1
                    row_default_height: 100
                    FloatLayout:
                        Button:
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}
                            on_press: print("купити")

                        Image:
                            size_hint: 0.1, 1
                            pos_hint: {'x': 0, 'center_y':0.5}
                            source: 'ball.png'

                    FloatLayout:
                        Button:
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}
                            on_press: print("купити")

                        Image:
                            size_hint: 0.1, 1
                            pos_hint: {'x': 0, 'center_y':0.5}
                            source: 'img.png'
                    FloatLayout:
                        Image:
                            source: "img_1.png"
                            allow_stretch: True
                            keep_ratio: False
                            size_hint: 0.5 , 0.5
                            pos_hint: {"center_x": 0.5 , "top": 0.5}
                        Button:
                            size_hint: 0.5 , 0.5
                            pos_hint: {"center_x": 0.5 , "top": 0.5}
                            text : "почати гру"
                            background_color: 1 ,0, 0 ,0
                            on_press : root.click()
<SecondScreen>:
    Button:

        on_press: root.buy()

